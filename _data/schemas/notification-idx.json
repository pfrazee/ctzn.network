{
  "id": "ctzn.network/notification-idx",
  "title": "Notifications Index",
  "description": "An index of activity relevant to a given user",
  "type": "json-table",
  "keyTemplate": [
    {"type": "json-pointer", "value": "/subjectUserId"},
    {"type": "string", "value": ":"},
    {"type": "json-pointer", "value": "/autokey"}
  ],
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["subjectUserId", "orderTs", "itemUrl", "createdAt"],
    "properties": {
      "subjectUserId": {
        "type": "string",
        "pattern": ".+@.+"
      },
      "orderTs": {
        "type": "string"
      },
      "itemUrl": {
        "type": "string",
        "format": "uri"
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}